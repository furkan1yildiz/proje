<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kayitActvity"
    android:background="@color/turuncu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/kayitAd"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/editext"
            android:hint="ad"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitSoyad"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Soyad"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitTel"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Telefon"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitYakin"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Yakininiz"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitYakinTel"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Yakininizin Telefonu"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitCinsiyet"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Cinsiyet"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitYas"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Yas"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitEposta"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Eposta"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitSifre"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Sifre"/>
        <EditText
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/kayitSifreTekrar"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:hint="Sifre Tekrar"/>
        <Button
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext"
            android:text="Kayit ol"/>

    </LinearLayout>

</LinearLayout>